{
	"useTabs": true,
	"semi": false,
	"trailingComma": "all",
	"tabWidth": 4,
	"printWidth": 150,
	"singleQuote": true,
	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
	"overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte" } }
	],
	"svelteStrictMode": false,
	"svelteAllowShorthand": true,
	"prettier.documentSelectors": ["**/*.svelte"]
}
